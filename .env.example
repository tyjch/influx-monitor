# InfluxDB configuration
INFLUX_URL=https://influx.example.com
INFLUX_TOKEN=your_influx_token
INFLUX_ORG=your_organization
INFLUX_BUCKET=your_bucket

# Discord webhook URL for alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
DISCORD_USERNAME=Influx Monitor
DISCORD_AVATAR_URL=

# Grafana configuration
GRAFANA_URL=https://grafana.example.com
GRAFANA_API_KEY=your_grafana_api_key
GRAFANA_DASHBOARD_UID=yourdashboarduid
GRAFANA_REFRESH_INTERVAL=300

# Temperature thresholds (Fahrenheit)
TEMP_COLD_MAX=96.5
TEMP_COOL_MAX=97.0
TEMP_AVERAGE_MAX=98.0
TEMP_WARM_MAX=99.0

# Calibration offset to add to raw sensor readings
TEMP_CALIBRATION_OFFSET=0.0

# Minimum realistic body temperature (°F)
TEMP_MIN_REALISTIC=94.0

# Maximum time (minutes) to reach realistic body temp before considering mispositioned
TEMP_MISPOSITION_THRESHOLD=5

# Rate of change threshold to exit stabilization mode (°F per minute)
TEMP_STABILIZATION_THRESHOLD=0.1

# Duration (seconds) to wait in stabilization mode before checking rate of change
TEMP_MIN_STABILIZATION_TIME=60

# Maximum room temperature difference for determining disconnection (°F)
TEMP_ROOM_THRESHOLD=10.0

# General settings
CHECK_INTERVAL=60
OFFLINE_THRESHOLD=300

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/influx_monitor.log